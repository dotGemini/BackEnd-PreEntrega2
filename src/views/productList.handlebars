<div>
    <h1>Productos</h1>
  
    <div id="products-container">
        {{#each allProds}}
            <div class="product">
                <h2>{{this.title}}</h2>
                <p>{{this.category}}</p>
                <p>{{this.stock}}</p>
                <p>Precio: {{this.price}}</p>
                <button class="add-to-cart" data-product-id="{{id}}">Agregar al carrito</button>
            </div>
        {{/each}}
    </div>
    
    <div id="pagination">
        {{#if paginate.hasPreviousPage}}
            <button class="previous-page"><a href="/products?page={{paginate.prevPage}}">Página anterior</a></button>
        {{/if}}
        {{#if paginate.hasNextPage}}
            <button class="next-page"><a href="/products?page={{paginate.nextPage}}">Página anterior</a></button>
        {{/if}}
    </div>

    <script src="js/addProductToCart.js"></script>
</div>

<a href="/products?page={{productPaginate.prevPage}}">Página anterior</a>